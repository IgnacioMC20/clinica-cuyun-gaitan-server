{
  "version": 2,
  "name": "clinica-server",
  "builds": [
    {
      "src": "src/index.ts",  
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]  
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/index.js"  
    }
  ],
  "functions": {
    "dist/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
